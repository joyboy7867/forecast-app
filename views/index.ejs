<%- include("header.ejs") %>

<div class="container-fluid px-1 px-sm-3 py-5 mx-auto">
    <div class="row d-flex justify-content-center">
        <div class="row card0">
            <div class="card1 col-lg-8 col-md-7">
                <small>WINDDAYSs</small>
                <div class="text-center">
                    <img class="image mt-5" src="https://i.imgur.com/M8VyA2h.png">
                </div>
                <div class="row px-3 mt-3 mb-3">
                    <h1 class="large-font mr-3"><%= temp %>&#176;c</h1>
                    <div class="d-flex flex-column mr-3">
                        <h2 class="mt-3 mb-0"> <%= place %> </h2>
                        <h3 class="mt-3 mb-0"> <%= region %> </h3>
                        <h4 class="mt-3 mb-0"> <%= country %> </h5>

                       

                        <small><%= locationtime %></small>
                    </div>
                    <div class="d-flex flex-column text-center">
                        
                        <small><h3><%= text %></h3><img src=<%= icon %> alt="icon" alt="icon"></small>
                    </div>
                    <div>
                        <form action="/" method="POST">
                            <input class="cityinput" type="text" name="add" placeholder="Search City/Country" >
                            <button class="cityinput1" type="submit">Search</button>
                            
                        </form>
                        
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>
<div class="sidetop">
    <div class="sidetop1">
        <div class="block">
            <i class="fa-solid fa-wind fa-2x"></i>
            <h2>Wind</h2>
            <h3><%= wind %> kph</h3>
    
        </div>
        <div class="block">
            <i class="fa-solid fa-droplet fa-2x"></i>
            <h2>Humidity</h2>
            <h3><%= humidity %> %</h3>
    
        </div>
        <div class="block">
            <i class="fa-solid fa-arrows-down-to-people fa-2x"></i>
            <h2>Pressure</h2>
            <h3><%= pre %> hPa</h3>
    
        </div>
        <div class="block">
            <i class="fa-regular fa-eye-slash fa-2x"></i>
            <h2>Visibility</h2>
            <h3><%= vis %> km</h3>
    
        </div>
    </div>
    <div class="sidetop1">
        <div class="block">
            <i class="fa-solid fa-temperature-high fa-2x"></i>
            <h2>Todays high</h2>
            <h3><%= maxtemp %> kph</h3>
    
        </div>
        <div class="block">
            <i class="fa-solid fa-temperature-low fa-2x"></i>
            <h2>Todays low</h2>
            <h3><%= mintemp %> %</h3>
    
        </div>
        <div class="block">
            <i class="fa-solid fa-sun fa-2x"></i>
            <h2>Sunrise</h2>
            <h3><%= sunrise %> AM</h3>
    
        </div>
        <div class="block">
            <i class="fa-solid fa-circle-half-stroke fa-rotate-270 fa-2x"></i>
            <h2>Sunset</h2>
            <h3><%= sunset %> PM</h3>
    
        </div>
    </div>
    <div class="hours">

      <% hours.forEach(element => { %>
            <div class="seprate">
               <h4><%= element.time %></h4>
               <h3><i class="fa-solid fa-temperature-low"></i><%=element.temp_c%>Â°C</h3> 
               <h3><i class="fa-solid fa-umbrella"></i><%= element.chance_of_rain %>%</h3>
            </div>   
      <% }) %>
    </div>
   
    <%- include("footer.ejs") %>
</div>
